  "description": "A centralized TUI management app for running TUI applications in embedded terminal windows",
  "type": "module",
  "main": "src/index.tsx",
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist --target node",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opentui/core": "^0.1.63",
    "@opentui/solid": "^0.1.63",
    "ghostty-opentui": "^1.3.11",
    "solid-js": "^1.9.3",
    "yaml": "^2.6.1",
    "zod": "^3.24.1",
    "fuse.js": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  }
}
