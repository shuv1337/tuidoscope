{
  "name": "tuidoscope",
  "version": "0.1.1",
  "description": "A centralized TUI management app for running TUI applications in embedded terminal windows",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tuidoscope": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun build src/index.tsx --outdir dist --target bun --packages external",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shuv1337/tuidoscope.git"
  },
  "keywords": [
    "tui",
    "terminal",
    "cli",
    "multiplexer",
    "ghostty",
    "opentui"
  ],
  "author": "shuv1337",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shuv1337/tuidoscope/issues"
  },
  "homepage": "https://github.com/shuv1337/tuidoscope#readme",
  "dependencies": {
    "@opentui/core": "^0.1.63",
    "@opentui/solid": "^0.1.63",
    "ghostty-opentui": "^1.3.11",
    "solid-js": "^1.9.3",
    "yaml": "^2.6.1",
    "zod": "^3.24.1",
    "fuse.js": "^7.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  }
}
